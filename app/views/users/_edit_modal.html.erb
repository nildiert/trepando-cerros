<input type="checkbox" id="edit-user-<%= user.id %>-modal" class="modal-toggle" />
<div class="modal">
  <div class="modal-box w-11/12 max-w-2xl relative">
    <label for="edit-user-<%= user.id %>-modal" class="btn btn-sm btn-circle absolute right-2 top-2">âœ•</label>
    <h3 class="text-xl font-semibold mb-4"><%= user.full_name.presence || user.email %></h3>
    <%= form_with model: user, url: user_path(user), method: :patch do |f| %>
      <div class="form-control mb-4">
        <%= f.label :role_id, 'Perfil', class: 'label' %>
        <%= f.select :role_id, roles.map { |r| [r.name.humanize, r.id] }, include_blank: 'Sin perfil', class: 'select select-bordered w-full capitalize' %>
      </div>
      <div class="flex justify-end">
        <%= f.submit 'Guardar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
