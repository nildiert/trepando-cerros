<ul class="list bg-base-100 rounded-box shadow-md w-full">
  <li class="p-4 pb-2 text-xs opacity-60 tracking-wide flex justify-between items-center">
    <span>Perfiles registrados</span>
    <label for="new-role-modal" class="btn btn-primary btn-sm">Nuevo perfil</label>
  </li>
  <% roles.each do |role| %>
    <li class="list-row">
      <div><img class="size-10 rounded-box" src="https://img.daisyui.com/images/profile/demo/1@94.webp" /></div>
      <div class="list-col-grow">
        <div class="capitalize"><%= role.name %></div>
      </div>
      <%= link_to role_path(role), class: 'btn btn-square btn-ghost', data: { turbo_frame: 'roles' } do %>
        <svg class="size-[1.2em]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor">
            <path d="M6 3L20 12 6 21 6 3z"></path>
          </g>
        </svg>
      <% end %>
    </li>
  <% end %>
</ul>
<%= render 'roles/new_modal' %>
