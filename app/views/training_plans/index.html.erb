<div class="container mx-auto p-4 space-y-4">
  <h2 class="text-xl font-semibold">Mis Planes de Entrenamiento</h2>
  <%= link_to 'Nuevo Plan', new_training_plan_path, class: 'btn btn-primary' %>
  <ul class="list-disc pl-5">
    <% @training_plans.each do |plan| %>
      <li>
        <%= link_to plan.name, training_plan_path(plan) %>
      </li>
    <% end %>
  </ul>
</div>
